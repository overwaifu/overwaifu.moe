{
  "name": "overwaifu",
  "version": "1.0.0",
  "description": "Hugo theme for OverWaifu.moe",
  "main": "sass/main.sass",
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-postcss",
    "build-clean": "rimraf static/css",
    "build-postcss": "postcss --output static/css/main.css static/css/main.css",
    "build-sass": "node-sass --output-style expanded sass/main.sass static/css/main.css",
    "start": "npm run build-sass -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overwaifu/overwaifu.moe"
  },
  "keywords": [
    "overwaifu",
    "responsive",
    "flexbox"
  ],
  "author": "Leonid Boykov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/overwaifu/overwaifu.moe/issues"
  },
  "homepage": "https://github.com/overwaifu/overwaifu.moe#readme",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "autoprefixer": "^9.1.5",
    "cssnano": "^4.1.5",
    "install": "^0.12.1",
    "node-sass": "^4.9.3",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "bulma": "^0.7.2",
    "bulma-tooltip": "^2.0.2"
  }
}
