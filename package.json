{
  "name": "overwaifu",
  "version": "1.0.0",
  "description": "Hugo theme for OverWaifu.moe",
  "main": "sass/main.sass",
  "scripts": {
    "build": "npm-run-all clean build:*",
    "build:sass": "node-sass --output-style expanded sass/main.sass static/css/main.css",
    "build:postcss": "postcss --output static/css/main.css static/css/main.css",
    "clean": "rimraf static/css",
    "start": "npm run build:sass -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overwaifu/overwaifu.moe"
  },
  "keywords": [
    "overwaifu",
    "responsive",
    "flexbox"
  ],
  "author": "Leonid Boykov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/overwaifu/overwaifu.moe/issues"
  },
  "homepage": "https://github.com/overwaifu/overwaifu.moe#readme",
  "dependencies": {
    "bulma": "^0.7.5",
    "bulma-tooltip": "^2.0.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.5.1",
    "cssnano": "^4.1.10",
    "install": "^0.12.2",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "rimraf": "^2.7.0"
  }
}
